			#			#return $RETURN_QUIT
			#			exit 0
			#		#elif [ "$throwaway_" == "q" ]; then
			#		#	draw_pitch
			#		#	draw_position
			#		#	flagged=false
			#		#	throwaway=""
			#		#	break
			#		elif [ "$throwaway_" == "n" ] || [ "$throwaway_" == "q" ]; then
			#			#draw_pitch
			#			#draw_position
