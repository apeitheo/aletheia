				;;
			'@')
				#if [ "$PAUSE" == true ]; then
				#	PAUSE=false
				#	draw_pitch
				#fi
				#if [ "$MUTE" == true ]; then
				#	echo "mute" >$ALETHEIA/pipe$$ &
