				espeak_say_natural "start"
				echo "get_time_pos" >"$ALETHEIA/pipe$$" &
				sleep 0.7
				CURRENT_TIME="`tail -1 \"$ALETHEIA/mplayer_output\" | cut -d '=' -f2`"
				draw_pitch
				draw_position
				;;
