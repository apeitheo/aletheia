					echo -e "$command" >"$ALETHEIA/pipe$$" &
					sleep 0.7
					empty_pane
					tput cup $(($LINES-3))
					echo -ne "$PADDING$CYAN`tail -1 \"$ALETHEIA/mplayer_output\"`"
					tput el
					read -n1 throwaway
				fi
				redraw_buffer
				draw_pitch
				draw_position
				;;
			#'[')
			#	master_volume_change "-1% +0%"
			#	;;
			#']')
			#	master_volume_change "+0% -1%"
			#	;;
