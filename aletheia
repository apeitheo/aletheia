				if [ "$?" != "200" ]; then
					return $?
				fi
				;;
			'2')
				#if [ "$PAUSE" == true ]; then
				#	PAUSE=false
				#	draw_pitch
				#fi
				#if [ "$MUTE" == true ]; then
