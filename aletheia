				#draw_pitch
				say_status
				;;
			'K')
				#espeak_say_natural " $POSITION of $TOTAL_QUEUE."
				edo_up
				;;
			'<')
				if [ "$VIDEO" == true ]; then
					espeak_say_natural "video disabled"
					VIDEO=false
					draw_banner "OFF"
				else
					espeak_say_natural "video enabled"
					VIDEO=true
