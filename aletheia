				tmp_volume_right="`echo $MASTER_VOLUME_RIGHT | cut -d'%' -f1`"
				if [ "$tmp_volume_left" -gt "$tmp_volume_right" ]; then
					total="$tmp_volume_left"
					right=true
				elif [ "$tmp_volume_right" -gt "$tmp_volume_left" ]; then
					total="$tmp_volume_right"
					right=false
