				#fi
				if [ "$LOOP" == false ]; then
					echo -e "pausing_keep loop -1 1" >"$ALETHEIA/pipe$$" &
				fi
				return 200
			#	old_time_before=$time_before
			#	time_before=`date +%s.%N`
			#	draw_banner "QUIT" true
			#	if [ "$VOICE_ENABLED" == true ]; then
