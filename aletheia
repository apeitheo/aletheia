fi
if [ "$COLORS_ENABLED" == false ]; then
	GREEN_BLACK='\033[1;37;1;40m'
	BLUE_BLACK='\033[1;37;1;40m'
	RED_BLACK='\033[1;37;1;40m'
	CYAN_BLACK='\033[1;37;1;40m'
	YELLOW_BLACK='\033[1;37;1:40m'
	RED='\033[1;37m'
	LIGHTRED='\033[0;37m'
	GREEN='\033[1;37m'
	BLUE='\033[1;37m'
