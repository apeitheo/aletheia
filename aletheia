				ext="`echo -ne \"$FILENAME\" | rev | cut -d'.' -f1 | rev`"
				filename_without_ext="`echo -ne \"$FILENAME\" | rev | cut -d'.' -f2- | rev`"
				#tmp=$(printf '%s\n' ${queue_array[@]} | grep -n "$filename_without_ext.repeat.$ext" | cut -d':' -f1 | head -1)
