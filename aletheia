			#	#flagged=false
			elif [ "$throwaway" == "W" ]; then
				old_time_before=$time_before
				time_before=`date +%s.%N`
				add_downloaded "noposition"
				flagged=true
			elif [ "$throwaway" == "" ]; then
				old_time_before=$time_before
				time_before=`date +%s.%N`
				if [ "$DOWNLOAD_POSITION" != "" ]; then
					espeak_say_natural "playing downloaded"
					JUMP="$DOWNLOAD_POSITION"
